{
  "name": "reusable-accordion-component",
  "version": "1.0.0",
  "description": "Reusable accordion component. Made by Biagio Ruotolo for Docebo.",
  "author": "Biagio Ruotolo",
  "license": "UNLICENSED",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biagruot/reusable-accordion-component.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o build/css src/scss",
    "serve": "browser-sync start --server --files 'css/*.css, **/*.html'",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run scss",
    "watch:js": "onchange \"src/js/*.js\" -- npm run babel",
    "babel": "babel --presets es2015 src/js/accordion.js -o build/js/accordion.js",
    "start": "run-p babel serve watch:css watch:js",
    "test": "cypress run --headless --config video=false"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.7",
    "cypress": "^3.8.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  }
}
